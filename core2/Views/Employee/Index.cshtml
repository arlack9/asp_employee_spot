@model List<Employee>;
@{
    ViewData["Title"] = "Current employees!";
}

<h1>Current Employees</h1>

<div class="container">
    <div class="row pt-4">
        <div class="col-6">
            <a class="btn btn-primary" asp-area="" asp-controller="Employee" asp-action="Create">
                <i class="bi bi-journal-plus"></i>
                Add new employee
            </a>
        </div>
     
    </div>
</div>

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead>
            <th>Id</th>
            <th>Name</th>
            <th>Dept</th>
            <th>Age</th>
            <th>Actions</th>
        </thead>

        <tbody>
            @foreach(var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.Dept</td>
                    <td>@item.Age</td>
                    <td> <a class="btn btn-danger" asp-area="" asp-controller="" asp-action="">Delete</a></td>
                    
                </tr>
            }
        </tbody>
    </table>
</div>



}