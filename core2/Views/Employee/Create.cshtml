@model Employee //asp-for indicates the class attributes

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">

            <div class="card">
                @* form-title *@
                <div class="card-header bg-primary text-white">
                    <h2>Create Diary Entry</h2>
                </div>

                @* form-body *@

                <div class="card-body">
                    <form asp-action="Create" method="post">

                        @* <div class="form-group mb-3">
                            <label asp-for="Id" class="form-label">Id</label>
                            <input asp-for="Id" class="form-control" placeholder="Enter Id" />
                        </div> *@


                        <div class="form-group mb-3">
                            <label asp-for="Name" class="form-label">Name</label>
                            <input asp-for="Name" class="form-control" placeholder="Enter Name" />
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Age" class="form-label">Age</label>
                            <input asp-for="Age" class="form-control" placeholder="Enter Age" />
                           
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Dept" class="form-label">Dept</label>
                            <input asp-for="Dept" class="form-control" placeholder="Enter Department" />
                           
                        </div>

                

                        <div class="d-flex justify-content-between">
                            <button type="submit" class="btn btn-primary">Create</button>
                            <a asp-controller="DiaryEntries" asp-action="Index" class="btn btn-secondary">Cancel</a>

                        </div>

                    </form>
                </div>


            </div>

        </div>
    </div>
</div>